@model Site.Models.ProfileViewModel

@{
    ViewBag.Title = "Edit";
    var CountryItems = new List<SelectListItem>();
    CountryItems.Add(new SelectListItem() { Text = String.Empty, Value = String.Empty });
    foreach (var name in ViewBag.Countries)
    {
        CountryItems.Add(new SelectListItem() { Text = name, Value = name });
    }  
}

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true)
        
        <div class="container">
            <div class="jumbotron">
                <h1>Edit Profile</h1>
                <p>First Name:</p>
                    @Html.EditorFor(model => model.FirstName, Model.FirstName)
                <div class="red">
                    @Html.ValidationMessageFor(model => model.FirstName)
                </div>
                <p>Last Name:</p>
                    @Html.EditorFor(model => model.LastName)
                <div class="red">
                    @Html.ValidationMessageFor(model => model.LastName)
                </div>
                <p>Age:</p>
                    @Html.EditorFor(model => model.Age)
                <div class="red">
                    @Html.ValidationMessageFor(model => model.Age)
                </div>
                <p>Email:</p>
                    @Html.EditorFor(model => model.Email)
                <div class="red">
                    @Html.ValidationMessageFor(model => model.Email)
                </div>
                <p>Homecountry:</p>
                    @Html.DropDownListFor(model => model.Country,CountryItems)
                <div class="red">
                    @Html.ValidationMessageFor(model => model.Country)
                </div>
                <p>City:</p>
                    @Html.EditorFor(model => model.City)
                <div class="red">
                    @Html.ValidationMessageFor(model => model.City)
                </div>
                <p>Mobile:</p>
                    @Html.EditorFor(model => model.PhoneNumber)
                <div class="red">
                    @Html.ValidationMessageFor(model => model.PhoneNumber)
                </div>
                <p>About me:</p>
                    @Html.TextAreaFor(model => model.AboutYourself)
                <div class="red">
                    @Html.ValidationMessageFor(model => model.AboutYourself)
                </div>
                <p>My interests:</p>
                    @Html.TextAreaFor(model => model.Interests)
                <div class="red">
                    @Html.ValidationMessageFor(model => model.Interests)
                </div><br>
                <p>
                    <input type="submit" class="btn btn-lg btn-default" value="Save" />
                </p>
                </div>
        </div>
    }

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
